{
  "name": "receipten2",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "メルカリにあるものをレシート化",
  "browser_action": {
    "default_title": "Popup",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "scripts": ["./src/background/Background.bs.js"],
    "persistent": true
  },
  "permissions": ["storage", "https://receipten-backend.vercel.app"]
}
